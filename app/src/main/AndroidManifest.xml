<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dreadloaf.com.countryquiz">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:noHistory="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseRegionActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:noHistory="true"/>
        <activity android:name=".QuizStartActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:noHistory="true"/>
        <activity android:name=".QuizInProgressActivity" android:theme="@style/noAnimTheme" android:noHistory="true"/>
        <activity android:name=".QuizEndActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:noHistory="true"/>

    </application>

</manifest>
