<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noAnimTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.QuizButton" parent = "Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorQuizButtonDefault</item>
        <item name="android:textColor">@color/colorQuizText</item>
    </style>

    <style name="AppTheme.MainStartButton" parent = "Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorMainMenuButton</item>
        <item name="android:textColor">@color/colorQuizText</item>
    </style>


    <style name="quizButtonStyle">
        <item name ="android:textSize">22sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/main_activity_header"
        android:textSize="65sp"
        android:textColor="@color/colorQuizText"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:lines="2"
        android:background="@color/colorQuizButtonDefault"/>
    -->
    <style name="headerTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">65sp</item>
        <item name="android:textColor">@color/colorQuizText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:background">@color/colorQuizButtonDefault</item>
    </style>

</resources>
